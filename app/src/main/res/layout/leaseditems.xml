<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <EditText
        android:id="@+id/unfront_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unfront Price (PKR)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/monthly_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monthly Installment"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/pending_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pending Installment"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/Description_leased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"/>

</LinearLayout>